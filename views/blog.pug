extends layout

block head
  title #{blog.title + " - Late Night Code"} 
  
  link(rel='stylesheet' href='/styles/blog.css')
  link(rel='stylesheet' href='/styles/syntax-highlighting.css')
  
  script(src="https://use.fontawesome.com/7ea5be644c.js")
  
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/katex@0.12.0/dist/katex.min.css' integrity='sha384-AfEj0r4/OFrOo5t7NnNe46zW/tFgW6x/bCJG8FqQCEo3+Aro6EYUG4+cU+KJWu/X' crossorigin='anonymous')
      
  script(defer='' src='https://cdn.jsdelivr.net/npm/katex@0.12.0/dist/katex.min.js' integrity='sha384-g7c+Jr9ZivxKLnZTDUhnkOnsh30B4H0rpLUpJ4jAIKs4fnJI+sEnkvrMWph2EDg4' crossorigin='anonymous')
      
  script(defer='' src='https://cdn.jsdelivr.net/npm/katex@0.12.0/dist/contrib/auto-render.min.js' integrity='sha384-mll67QQFJfxn0IYznZYonOWZ644AWYC+Pt2cHqMaRhXVrursRwvLnLaebdGIlYNa' crossorigin='anonymous' onload='renderMathInElement(document.body);')
    

  
block content
  .container.p-5
    .row
      .col
        //- Back button
        .row
          .col
            a(href="/blog/").back-button
              i(aria-hidden="true").fa.fa-arrow-left 
              span.back-button-text back to blog list...
              
        //- Header
        .row.cover-container.mt-3
          .col
            img(id='cover-art' src=blog.coverArt alt='Blog Cover Photo')
        .row.header-container
          .col
            h1.mb-0 #{blog.title}
        .row.blog-info.mt-3.pr-5
          .col-6
            img(id='profile-picture' class='float-left' src=blog.author.image alt='Profile Picture')
            i.ml-3 by #{blog.author.name}
          .col-6.text-right
            i.pt-2 #{blog.displayUploadDate}
        hr
          
        //- Content
        .row.content
          .col
            p!= blog.content 
        
        hr.mt-5
        
        //- Next and Previous Links
        .row.mt-4.next-prev-links
          .col-6
            if blog.prevPage
              a(href=blog.prevPage)
                i(aria-hidden="true").fa.fa-arrow-left 
                span.ml-2 Previous Post...
          .col-6.text-right
            if blog.nextPage
              a(href=blog.nextPage) 
                i(aria-hidden="true").fa.fa-arrow-right
                span.ml-2 Next Post...
        
        //- TODO: Add a cute illustration here
        
        //- Spacers
        .row.my-5
          .col.my-5
        .row.my-5
          .col.my-5

